
// A= length; A = x+x+y thus  y= A - 2b
// P = x * y thus P = x * (A - 2x) -> xa - 2x^2x
// for the max value of in quadric equation = the max value of the 
// vertex of parabola: x = -b/2a 
// thus: x= A/4, y= A/2


#include <iostream>
using namespace std;

int main()
{
    int A;
    int x;
    int y;
    cout<<"The length of the fence is: ";
    cin>>A;
    if( A <=0 ) {
        cerr << "Wrong input data" << endl ;
        return 1;
    }
    
    cout<<"The optimal length of the segment a is: " << to_string(A/4) << endl 
        << "The optimal lenght of the segment b is: " << to_string(A/2);

    return 0;
}
